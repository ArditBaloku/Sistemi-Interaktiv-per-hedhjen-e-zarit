package Projekti;

import javafx.scene.control.Label;
import javafx.scene.control.TextField;

public class FormValidation 
{
	public static boolean textFieldNotEmpty(TextField t)
	{
		boolean b = false;
		if(t.getText()!=null && !t.getText().isEmpty())
		{
			b=true;
		}
		return b;
	}
	public static boolean ntextFieldNotEmpty(TextField t, Label l, String sValidationText)
	{
		boolean b = true;
		String c = null;
		if(!textFieldNotEmpty(t))
		{
			b=false;
			c=sValidationText;
		}
		t.setText(c);
		
		return b;
	}
	public static boolean ltextFieldNotEmpty(TextField t, Label l, String sValidationText)
	{
		boolean b = true;
		String c = null;
		if(!textFieldNotEmpty(t))
		{
			b=false;
			c=sValidationText;
		}
		t.setText(c);
		
		return b;
	}
}
