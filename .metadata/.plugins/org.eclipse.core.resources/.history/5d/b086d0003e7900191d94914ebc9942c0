package Projekti;

import java.util.regex.Matcher;
import java.util.regex.Pattern;

import javafx.scene.control.Label;
import javafx.scene.control.TextField;
import javafx.scene.paint.Color;

public class FormValidation 
{
	public static boolean textFieldNotEmpty(TextField t)
	{
		boolean b = false;
		if(t.getText()!=null && !t.getText().isEmpty())
		{
			b=true;
		}
		return b;
	}
	public static boolean textFieldNotEmpty(TextField t, String sValidationText)
	{
		boolean b = true;
		String c = null;
		if(!textFieldNotEmpty(t))
		{
			b=false;
			c=sValidationText;
			t.setStyle("-fx-background:red;");
			t.setText(c);
		}
		return b;
	}
	public static boolean email(TextField t, String sValidationText)
	{
		boolean b = true;
		String email = t.getText();
		String c = null;
		String emailPattern = "^[a-zA-Z0-9.!#$%&'*+/=?^_`{|}~-]+@[A-Z0-9.-]+\\.[A-Z]{2,}$";
		Pattern pattern = Pattern.compile(emailPattern);
		Matcher matcher = pattern.matcher(email);
		if(!textFieldNotEmpty(t)||!matcher.matches())
		{
			b=false;
			c=sValidationText;
		}
		return b;
	}
}
